<div class="row">
	<div class="col-md-12">
		<div class="page-header">
			<h1>Location details</h1>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<ul class="nav nav-pills">
		  <li><a href="{{base_url}}/locations"><span class="glyphicon glyphicon-chevron-left"></span>&nbsp;View other locations</a></li>
		  <li class="active"><a href="#"><span class="glyphicon glyphicon-th-list"></span>&nbsp;View details</a></li>
		  <li><a href="{{base_url}}/vehicles"><span class="glyphicon glyphicon-list"></span>&nbsp;View all vehicles</a></li>
		  {{{extra_options}}}
		</ul>
	</div>
</div>
<div class="row pad-top-10">
	<div class="col-md-4">
		<h4>Description:</h4>
		<p>Street address: {{street_address}}</p>
		<p>City: {{city}}</p>
		<p>Zipcode: {{zipcode}}</p>
		<p>State: {{state}}</p>
		<p>Country: {{country}}</p>
		<p>Capacity: {{capacity}}</p>
	</div>
	<div class="col-md-8">
		<h4>Vehicles at this location:</h4>
		<div class="row">
			{{{vehicles}}}
		</div>
	</div>
</div>